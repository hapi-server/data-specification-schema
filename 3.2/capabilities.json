{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "capabilities",
  "description": "Server /capabilities response",
  "type": "object",
  "required": [
    "HAPI",
    "outputFormats",
    "status"
  ],
  "definitions": {
    "HAPI": {
      "id": "#/definitions/HAPI",
      "description": "HAPI Version",
      "type": "string",
      "pattern": "^3\\.1$"
    },
    "HAPIStatus": {
      "id": "#/definitions/HAPIStatus",
        "title": "",
      "description": "Request status",
      "type": "object",
      "required": [
        "code",
        "message"
      ],
      "patternProperties": {
        "x_.*": {}
      },
      "additionalProperties": false,
      "properties": {
        "code": {
          "description": "HAPI request status code",
          "type": "integer",
          "enum": [
            1200,
            1201,
            1400,
            1401,
            1402,
            1403,
            1404,
            1405,
            1406,
            1407,
            1408,
            1409,
            1410,
            1411,
            1412,
            1500,
            1501
          ]
        },
        "message": {
          "description": "HAPI request status message",
          "type": "string"
        }
      }
    }
  },
  "patternProperties": {
    "x_.*": {}
  },
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "description": "schema declaration is sometimes found in response.",
      "type": "string"
    },    
    "HAPI": {
      "$ref": "#/definitions/HAPI"
    },
    "status": {
      "$ref": "#/definitions/HAPIStatus"
    },
    "outputFormats": {
      "description": "Output formats, which must include csv.",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "csv",
          "binary",
          "json"
        ]
      },
      "minItems": 1,
      "additionalItems": true,
      "uniqueItems": true
    }
  }
}
